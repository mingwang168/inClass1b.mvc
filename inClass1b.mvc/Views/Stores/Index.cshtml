@model IEnumerable<inClass1b.mvc.Models.FoodStore.Store>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Region)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Building)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Region)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Building.BuildingName)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Branch">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Branch">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Branch">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
